// clang-format off
#include <glad/gl.h>
#include <GLFW/glfw3.h>
// clang-format on
#include <string>

class glfw_app {
public:
  glfw_app(const std::string &window_title, int window_width,
           int window_height);
  virtual ~glfw_app();

  void start();

  virtual void on_keydown(GLFWwindow *window, int key, int scancode, int action,
                          int mods);
  virtual void on_error(int error, const char *desc);
  virtual void on_resize(GLFWwindow *window, int width, int height);
  virtual void glloop() = 0;

  GLFWwindow *_window;
};